<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <% if current_user %>
      <%= current_user.user_name %>
      <%= button_to "Logout", session_url(current_session), method: "delete" %>
    <% else %>
      <%= button_to "Login", new_session_url, method: "get" %>
      <%= button_to "Sign Up", new_user_url, method: "get" %>
    <% end %>
  </header>

  <div>
    <%= flash[:errors] if flash[:errors] %>
  </div>

<%= yield %>
<footer>
  Soon we will allow dog rentals too!
  <%= yield :footer %>
</footer>
</body>
</html>
